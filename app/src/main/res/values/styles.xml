<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:layout_marginTop">@dimen/fragment_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/fragment_margin_bottom</item>
        <item name="android:background">@color/honey_background_color</item>
        <item name="android:textColor">@color/dark_grey_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view">
        <item name="android:layout_margin">@dimen/activity_main_text_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/activity_main_background_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="fragment_input_field">
        <item name="android:ems">@integer/ems_value</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
